{
    "name":"Hue Notifier",
    "version":"0.1.20",
    "manifest_version":2,
    "description":"Notify when Hue finished execution of job",
    "permissions": [ 
        "notifications", 
        "tabs", 
        "*://*/beeswax/results/*" 
        ],
    "content_scripts":[
        {
            "matches":["*://*/beeswax/results/*"],
            "js":[ "script.js"],
            "run_at" : "document_idle"
        }
    ],
    "background": { "scripts": ["background.js"] }
}