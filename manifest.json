{
    "name":"Hue Notifier",
    "version":"0.2.1",
    "manifest_version":2,
    "description":"Notify when Hue finished execution of job",
    "permissions": [ 
        "notifications", 
        "tabs", 
        "*://*/beeswax/results/*",
        "*://*/impala/results/*" ,
        "*://*/pig/*logs/*" 
        ],
    "content_scripts":[
        {
            "matches":["*://*/beeswax/results/*", "*://*/impala/results/*", "*://*/pig/*logs/*"],
            "js":[ "script.js"],
            "run_at" : "document_idle"
        }
    ],
    "background": { "scripts": ["background.js"] }
}